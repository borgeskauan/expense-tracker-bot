generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Transaction {
  id          Int      @id @default(autoincrement())
  userId      String
  date        DateTime
  amount      Float
  category    String
  description String?
  type        String   @default("expense") // "expense" or "income"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  
  @@index([userId])
}

model RecurringTransaction {
  id          Int      @id @default(autoincrement())
  userId      String
  amount      Float
  category    String
  description String?
  type        String   @default("expense") // "expense" or "income"
  
  // Recurrence pattern
  frequency   String   // "daily", "weekly", "monthly", "yearly"
  interval    Int      @default(1) // Every X units
  dayOfWeek   Int?     // For weekly: 0-6 (Sunday-Saturday)
  dayOfMonth  Int?     // For monthly: 1-31
  
  // Lifecycle dates
  startDate   DateTime
  nextDue     DateTime // When next expense should be created
  
  // Status
  isActive    Boolean  @default(true)
  
  // Metadata
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId])
  @@index([nextDue])
}

model Conversation {
  id        Int       @id @default(autoincrement())
  userId    String    // WhatsApp JID
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]

  @@index([userId])
}

model Message {
  id             Int          @id @default(autoincrement())
  conversationId Int
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String       // 'user' or 'model'
  content        String       // JSON stringified content
  createdAt      DateTime     @default(now())

  @@index([conversationId])
}
